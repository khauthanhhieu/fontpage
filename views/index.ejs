<!DOCTYPE html>
<html lang="vi">

<head>
	<title>Trang chủ | E-Shopping</title>
	<% include partials/head %>
</head>
<!--/head-->

<body>
	<% include partials/header %>
	<section id="slider">
		<!--slider-->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div id="slider-carousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
							<li data-target="#slider-carousel" data-slide-to="1"></li>
							<li data-target="#slider-carousel" data-slide-to="2"></li>
						</ol>

						<div class="carousel-inner">
							<div class="item active">
								<img src="/images/home/sandisk.png" alt="" />
							</div>
							<div class="item">
								<img src="/images/home/deal.jpg" alt="" />
							</div>

							<div class="item">
								<img src="/images/home/freeship20k.png" alt="" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--/slider-->

	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<% include partials/left-list %>
				</div>
				<div class="col-sm-9 padding-right">
					<div class="container">
						<div class="row">
							<div class="col-sm-9 padding-right">
								<div class="features_items">
									<!--features_items-->
									<h2 class="title text-center">Tìm kiếm phổ biến</h2>
									<% pList.forEach(function(pItem) { %>
									<div class="col-sm-4">
										<div class="product-image-wrapper">
											<div class="single-products">
												<div class="productinfo text-center">
													<img src="<%= pItem.path_picture %>" alt="" />
													<h2><%= pItem.price %> ₫</h2>
													<p><%= pItem.name %></p>
													<a href="/product/<%= pItem.id %>"
														class="btn btn-default add-to-cart"><i
															class="fa fa-shopping-cart"></i>Xem chi tiết</a>
												</div>
											</div>
											<div class="choose">
												<ul class="nav nav-pills nav-justified">
													<li><a href="#"><i class="fa fa-plus-square"></i>Thêm vào giỏ
															hàng</a></li>
													<li><a href="#"><i class="fa fa-plus-square"></i>Thêm vào mục so
															sánh</a></li>
												</ul>
											</div>
										</div>
									</div>
									<% }); %>
								</div>
							</div>
						</div>
						<div class="row">
							<ul class="pagination">
								<% if(iPage > 1) { %>
								<li class="page-item">
									<a class="page-link" href="/home?p=<%= iPage - 1 %>">
										<< </a> </li> <% } %> <% var begin = 1; %>
											<% if (begin < iPage - 1) begin = iPage - 1; %> <% var end = nPage %>
											<% if (end > begin + 5) end = begin + 5; %>
											<% for(var i = begin; i <= end; i++) { %> <% if(iPage == i) { %> <li
											class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
								<% } else { %>
								<li class="page-item"><a class="page-link" href="/home?p=<%= i %>"><%= i %></a></li>
								<% } %>
								<% } %>
								<% if (iPage < parseInt(nPage)) { %>
								<% console.log(iPage + "<" + nPage) %>
								<li class="page-item">
									<a class="page-link" href="/home?p=<%= parseInt(iPage) + 1 %>">
										>>
									</a>
								</li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<% include partials/recommeded_item %>
		</div>
	</section>

	<% include partials/footer %>
	<% include partials/javascripts %>

</body>

</html>